<picture class="{{picture_class}}">
  {{!-- Serve the WebP format if the browser supports it --}}
  <source 
    {{^match loading "eager"}}data-{{/match}}srcset="{{#if size_xxs}}{{img_url image_url size="xxs" format="webp"}} 30w,{{/if}}{{#if size_xs}}{{img_url image_url size="xs" format="webp"}} 100w,{{/if}}{{#if size_s}}{{img_url image_url size="s" format="webp"}} 300w,{{/if}}{{#if size_m}}{{img_url image_url size="m" format="webp"}} 600w,{{/if}}{{#if size_l}}{{img_url image_url size="l" format="webp"}} 1000w,{{/if}}{{#if size_xl}}{{img_url image_url size="xl" format="webp"}} 2000w{{/if}}"
    data-sizes="auto"
    type="image/webp"
  >
  {{!-- Fallback image --}}
  <img class="{{image_class}}"
    data-srcset="{{#if size_xxs}}{{img_url image_url size="xxs"}} 30w,{{/if}}{{#if size_xs}}{{img_url image_url size="xs"}} 100w,{{/if}}{{#if size_s}}{{img_url image_url size="s"}} 300w,{{/if}}{{#if size_m}}{{img_url image_url size="m"}} 600w,{{/if}}{{#if size_l}}{{img_url image_url size="l"}} 1000w,{{/if}}{{#if size_xl}}{{img_url image_url size="xl"}} 2000w{{/if}}"
    srcset="{{img_url image_url size="xxs"}}"
    data-sizes="auto"
    data-src="{{img_url image_url size="xs"}}"
    src="{{img_url image_url size="xxs"}}"
    alt="{{#match image_type "post"}}{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}{{/match}}{{#match image_type "site"}}{{@site.title}}{{/match}}{{#match image_type "author"}}{{name}}{{/match}}{{#match image_type "tag"}}{{name}}{{/match}}"
    {{#if loading}}loading="{{loading}}"{{/if}}
  >
</picture>
            {{/foreach}}
          </div>
        </section>
      {{/if}}
    {{/get}} --}}

  </div>

  {{> host-retreat}}

  <div class="container wrapper">
    <section class="lead-section flex flex-container" id="vision">
      <div class="section__container">
        <img src="/content/images/magazine.jpg" />
      </div>
      <div class="section__container">
        <div class="lead-section__content section__content">
          <h1 class="mantra-title--alt">
            Get Your Free Holistic<br />Wellness Guide
          </h1>
          <p class="mantra-text">
            Dive into the world of holistic wellness with our exclusive brochure. Sign up with your email and receive a comprehensive guide to embracing a healthier, more balanced lifestyle.
          </p>
          <input class="mantra-input" type="text" placeholder="Enter your email" />
          <button class="btn btn--brand">
            <a href="/host-a-retreat">Download</a>
          </button>
        </div>
      </div>
    </section>
  </div>

{{#is "home"}}
  {{> contact}}
  {{> quote}}
{{/is}}

</div>
